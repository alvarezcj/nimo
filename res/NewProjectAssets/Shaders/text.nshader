@VERTEX
#version 330 core
layout (location = 0) in vec4 vertex;
out vec2 oTexCoords;

uniform mat4 projection;
uniform mat4 transform;

void main()
{
   gl_Position = projection * transform * vec4(vertex.xy, 0.0, 1.0);
   oTexCoords = vertex.zw;
}
@VERTEXEND

@FRAGMENT
#version 330 core
in vec2 oTexCoords;
out vec4 FragColor;

uniform sampler2D text;
uniform vec4 color;

void main()
{
   FragColor = vec4(color.rgb, color.a * texture(text, oTexCoords).r);
}
@FRAGMENTEND